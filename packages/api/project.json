{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/api",
        "main": "packages/api/src/index.ts",
        "tsConfig": "packages/api/tsconfig.json",
        "assets": ["packages/api/*.md"],
        "format": ["cjs"],
        "platform": "node",
        "generatePackageJson": true
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node dist/packages/api/index.cjs",
        "cwd": "{workspaceRoot}",
        "env": {
          "NODE_ENV": "development",
          "PORT": "3001"
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/api"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/api/**/*.ts"]
      }
    },
    "type-check": {
      "executor": "@nx/js:tsc",
      "options": {
        "tsConfig": "packages/api/tsconfig.json"
      }
    },
    "setup:db": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx packages/api/src/setup-db.ts",
        "cwd": "{workspaceRoot}",
        "env": {
          "NODE_ENV": "development"
        }
      }
    }
  },
  "tags": ["scope:api", "type:application"]
}
