{
  "name": "cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/cli/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/cli",
        "main": "packages/cli/src/index.ts",
        "tsConfig": "packages/cli/tsconfig.json",
        "assets": ["packages/cli/*.md"],
        "format": ["cjs"],
        "platform": "node"
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "cli:build",
        "watch": true
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/cli"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/cli/**/*.ts"]
      }
    },
    "type-check": {
      "executor": "@nx/js:tsc",
      "options": {
        "tsConfig": "packages/cli/tsconfig.json"
      }
    }
  },
  "tags": ["scope:cli", "type:application"],
  "implicitDependencies": ["types", "config", "core"]
}
